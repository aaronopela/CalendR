{
    "name": "yohang/calendr",
    "description": "Object Oriented calendar management",
    "keywords": ["date", "calendar", "events"],
    "homepage": "https://github.com/yohang/CalendR",
    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Yohan GIARELLI",
            "email": "yohan@giarel.li",
            "homepage": "http://yohan.giarel.li"
        }
    ],

    "require": {
        "php": "^8.0",
        "symfony/options-resolver": "^5.0|^6.0"
    },

    "require-dev": {
        "doctrine/cache":               "^1.5|^2.0",
        "doctrine/common":              "^2.5|^3.0",
        "doctrine/orm":                 "^2.5|^3.0",
        "phpunit/phpunit":              "^9.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config":               "^6.0",
        "symfony/http-kernel":          "^6.0",
        "symfony/yaml":                 "^6.0",
        "twig/twig":                    "^3.0",
        "phpspec/prophecy":             "^1.15",
        "phpspec/prophecy-phpunit":     "^2.0"
    },

    "autoload": {
        "psr-4": { "CalendR\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "CalendR\\Test\\": "tests/" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    }
}
